{
  "moduleFileExtensions": ["js", "json", "ts"],
  "moduleNameMapper": {
    "^@contactApp/(.*)$": "<rootDir>/src/$1"
  },
  "coveragePathIgnorePatterns": ["/node_modules/", "./src/database/migrations"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
